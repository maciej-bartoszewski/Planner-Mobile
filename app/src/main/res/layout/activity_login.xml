<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="@null">


    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/box_create_account"
            android:layout_width="20dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/box_color_cream_white">

            <Button
                android:id="@+id/button_create_account"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp"
                android:width="300dp"
                android:background="@drawable/box_color_light_green"
                app:backgroundTint="@null"
                android:text="Stwórz konto"
                android:textAllCaps="false"
                android:textColor="#272727"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgot_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="80dp"
                android:text="Nie masz konta?"
                android:textAlignment="center"
                android:textColor="#546E7A"
                android:textSize="15sp" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/check_password"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pass"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_color_cream_white"
            app:passwordToggleEnabled="true"
            android:textColorHint="#757575"
            app:hintTextColor="#757575"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:passwordToggleTint="#757575"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="18dp"
                android:background="@drawable/box_color_cream_white"
                android:hint="Hasło"
                android:textColor="#757575"
                android:inputType="textPassword"
                android:textColorHint="#757575"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bledne_haslo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/box_color_dark_grey"
            android:text="Zaloguj się"
            android:textAllCaps="false"
            android:textColor="#F7F7F7"
            android:textSize="16sp"
            app:layout_marginBaseline="20dp"
            app:backgroundTint="@null"
            />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_sign_in"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="270dp"
            android:layout_marginBottom="-10dp"
            android:text="Email"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/text_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:text="Logowanie"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_below="@+id/text_email"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="18dp"
            android:autofillHints=""
            android:background="@drawable/box_color_cream_white"
            android:ems="10"
            android:hint="email@gmail.com"
            android:textColorHint="#757575"
            android:textColor="#757575"
            android:inputType="textEmailAddress"
            android:paddingLeft="18dp" />

        <TextView
            android:id="@+id/text_pass"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="270dp"
            android:text="Hasło"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="#757575"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/bledne_haslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_password"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Nieprawidłowy adres e‑mail lub hasło"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />

    </RelativeLayout>

</RelativeLayout>